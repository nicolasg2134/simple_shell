#include "shell.h"

/**
 * get_path - if command is in the path directories
 * @string: an array of strings
 * @env: an array of env vars
 * Return: pointer to the linked list
 */
void check_path(char **string, char **env)
{
	char *str1, *str2, *path;
	int i, init, end;

	str1 = concatenate_strings("/", string[0]);
	path = _getenv("PATH", env);
	if (path == NULL)
	{
		free(str1);
		exit(0);
	}
	init = i = end = 0;
	while (path[i])
	{
		if (path[i] == ':' || path[i + 1] == '\0')
		{
			if (path[i + 1] == '\0')
			{
				i += 1;
				end = 1;
			}
			else
				path[i] = '\0';
			str2 = concatenate_strings(path + init, str1);
			if (access(str2, F_OK) == 0)
			{
				free(string[0]);
				string[0] = str2;
				free(str1);
				return;
			}
			free(str2);
			if (end)
				break;
			path[i] = ':';
			init = i + 1;
		}
		i += 1;
	}
	free(str1);
}
